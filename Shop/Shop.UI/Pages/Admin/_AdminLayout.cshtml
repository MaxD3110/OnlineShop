@inject IAuthorizationService authService

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>@ViewData["Title"] - PARopt</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="~/plugins/simple-page-preloader-master/dist/loader.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/fontawesome.min.css">
    <link rel="stylesheet" href="/css/all.min.css">
    <link rel="stylesheet" href="/css/adminlte.min.css">
    <link rel="stylesheet" href="/css/custom.css" />
    <link rel="stylesheet" href="~/css/StarRate/starability-all.min.css" />
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <link rel="stylesheet" href="~/plugins/toastr/toastr.css" />
    <link rel="stylesheet" href="~/plugins/bootstrap-colorpicker/css/bootstrap-colorpicker.min.css">
    <style>
        .hidden {
            display: none
        }

        .prokrutka {
            overflow-y: scroll;
            min-height: 518px;
            max-height: 603.5px;
        }

        .card-height {
            height: 650px;
            max-height: 650px;
        }

        .align {
            text-align: center;
            justify-content: center;
        }

        .customInput {
            border-top: 0;
            border-left: 0;
            border-right: 0;
            border-radius: 0;
            box-shadow: inherit;
            border-bottom: 0;
            text-align: center;
        }

        .customSticky {
            position: fixed;
            left: 52.7%;
            transform: translateX(-52.7%);
            bottom: -10px;
            z-index: 99;
        }

        .rectangle {
            width: 280px;
            height: 60px;
            background-color: rgb(52,58,64);
            color: #fff;
            border-radius: 5px;
            justify-content: center;
            opacity: 0.3;
            z-index: 99;
        }

            .rectangle:hover {
                opacity: 1.0;
            }
    </style>
</head>


<body class="hold-transition sidebar-mini sidebar-collapse">
    <div class="loader-body" id="loader">
        <div class="loader"></div>
    </div>
    <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        <!-- Left navbar links -->
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
            </li>
            <li class="nav-item d-none d-sm-inline-block">
                <a asp-page="/Index" class="nav-link">Назад на главную</a>
            </li>
        </ul>
    </nav>
    <!-- /.navbar -->
    <!-- Main Sidebar Container -->
    <aside class="main-sidebar sidebar-dark-primary elevation-4" style="position:fixed;">
        <!-- Brand Logo -->
        <a href="index3.html" class="brand-link">
            <img src="/images/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
            <span class="brand-text font-weight-light align-center">Админ Меню</span>
        </a>

        <!-- Sidebar -->
        <div class="sidebar sidebar-collapse">
            <!-- Sidebar user panel (optional) -->
            <!-- SidebarSearch Form -->
            <div class="form-inline">
                <div class="input-group" data-widget="sidebar-search">
                    <input class="form-control form-control-sidebar" type="search" placeholder="Search" aria-label="Search">
                    <div class="input-group-append">
                        <button class="btn btn-sidebar">
                            <i class="fas fa-search fa-fw"></i>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Sidebar Menu -->
            <nav class="mt-2">
                <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                    <!-- Add icons to the links using the .nav-icon class
                    with font-awesome or any other icon font library -->
                    @if ((await authService.AuthorizeAsync(User, "Manager")).Succeeded)
                    {
                        <li class="nav-item">
                            <a asp-page="/Admin/AdminMain" class="nav-link">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>
                                    Главная
                                </p>
                            </a>
                        </li>
                        <li class="nav-header">Товары</li>
                        <li class="nav-item">
                            <a asp-page="/Admin/Index" class="nav-link">
                                <i class="nav-icon fas fa-table"></i>
                                <p>
                                    Список товаров
                                </p>
                            </a>
                        </li>
                        <li class="nav-header">Заказы</li>
                        <li class="nav-item">
                            <a asp-page="/Admin/OrderManagement" class="nav-link">
                                <i class="nav-icon fas fa-book"></i>
                                <p>
                                    Активные заказы
                                </p>
                            </a>
                        </li>
                        <li class="nav-header">Блог</li>
                        <li class="nav-item">
                            <a asp-page="/Admin/Posts" class="nav-link">
                                <i class="nav-icon fas fa-edit"></i>
                                <p>
                                    Управление блогом
                                </p>
                            </a>
                        </li>
                        

                    }
                    @if ((await authService.AuthorizeAsync(User, "Admin")).Succeeded)
                    {
                        <li class="nav-header">Аккаунты</li>
                        <li class="nav-item">
                            <a asp-page="/Admin/ConfigureUsers" class="nav-link">
                                <i class="nav-icon far fa-plus-square"></i>
                                <p>
                                    Добавить аккаунт
                                </p>
                            </a>
                        </li>
                    }
                </ul>
            </nav>
            <!-- /.sidebar-menu -->
        </div>
        <!-- /.sidebar -->
    </aside>




    <div id="app" class="wrapper" style="height:100%;">
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">

            @RenderBody()

        </div>
        <!-- /.content -->
    </div>

    <footer class="main-footer">
        <!-- To the right -->
        <div class="float-right d-none d-sm-inline">
            Футер
        </div>
        <!-- Default to the left -->
        <strong> 2022 <a>Дипломный проект</a>.</strong> Что-то ещё.
    </footer>

    <!-- Control Sidebar -->
    <aside class="control-sidebar control-sidebar-dark">
        <!-- Control sidebar content goes here -->
        <div class="p-3">
            <h5>Title</h5>
            <p>Sidebar content</p>
        </div>
    </aside>
    <!-- /.control-sidebar -->
    <script src="https://cdn.jsdelivr.net/npm/vue@2.6.14"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="/plugins/jquery/jquery.min.js"></script>
    <script src="/js/bootstrap.bundle.min.js"></script>
    <script src="/js/jquery.waypoints.min.js"></script>
    <!-- Main JS File -->
    <script src="/js/main.js"></script>
    <script src="/js/adminlte.min.js"></script>
    <script src="~/plugins/toastr/toastr.min.js"></script>
    <script>
        var loader = document.getElementById("loader");
        window.addEventListener("load", function () {

            setTimeout(function () {
                var preloader = document.getElementById('loader');
                if (!preloader.classList.contains('done')) {
                    preloader.classList.add('done');
                }
            }, 500)

        }) 

    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
