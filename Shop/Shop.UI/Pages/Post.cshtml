@page "{id}"
@model Shop.UI.Pages.PostModel
@{
}

<main class="main">
    <nav aria-label="breadcrumb" class="breadcrumb-nav border-0 mb-0">
        <div class="container">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-page="Index">Главная</a></li>
                <li class="breadcrumb-item"><a asp-page="Blog">Блог</a></li>
                <li class="breadcrumb-item active" aria-current="page">@Model.Post.Title</li>
            </ol>
        </div><!-- End .container -->
    </nav><!-- End .breadcrumb-nav -->

    <div class="page-content" id="app">
        <div class="container">
            <figure class="entry-media">
                <img src="/images/postsfolder/@Model.Post.Image" alt="image desc" style="max-height: 500px; object-fit:cover">
            </figure><!-- End .entry-media -->
            <article class="entry single-entry entry-fullwidth">
                <input id="getPost" style="display:none" value="" />
                <div class="row">
                    <div class="col-lg-11">
                        <div class="entry-body">
                            <div class="entry-meta">
                                @*<span class="entry-author">
                                        by <a href="#">John Doe</a>
                                    </span>*@
                                @*<span class="meta-separator">|</span>*@
                                <a href="#">@Model.Post.Created</a>
                                @*<span class="meta-separator">|</span>
                                    <a href="#">2 Comments</a>*@
                            </div><!-- End .entry-meta -->

                            <h2 class="entry-title entry-title-big">
                                @Model.Post.Title
                            </h2><!-- End .entry-title -->

                            <div class="entry-cats">
                                в
                                @if (Model.Post.Category == "news")
                                {
                                    <a asp-page="Blog">Новости</a>

                                }
                                else if (Model.Post.Category == "fresh")
                                {
                                    <a asp-page="Blog">Новинки</a>
                                }
                                else if (Model.Post.Category == "reviews")
                                {
                                    <a asp-page="Blog">Обзоры</a>
                                }
                                else if (Model.Post.Category == "compil")
                                {
                                    <a asp-page="Blog">Подборки</a>
                                }
                                else if (Model.Post.Category == "sales")
                                {
                                    <a asp-page="Blog">Акции</a>
                                }
                            </div><!-- End .entry-cats -->

                            <div class="entry-content editor-content" id="quillEditor" style="border:none">

                            </div><!-- End .entry-content -->


                        </div><!-- End .entry-body -->
                    </div><!-- End .col-lg-11 -->

                    <div class="col-lg-1 order-lg-first mb-2 mb-lg-0">
                        <div class="sticky-content">
                            <div class="social-icons social-icons-colored social-icons-vertical">
                                <span class="social-label">Поделиться:</span>
                                <a href="#" class="social-icon social-facebook" title="Facebook" target="_blank"><i class="icon-facebook-f"></i></a>
                                <a href="#" class="social-icon social-twitter" title="Twitter" target="_blank"><i class="icon-twitter"></i></a>
                                <a href="#" class="social-icon social-pinterest" title="Pinterest" target="_blank"><i class="icon-pinterest"></i></a>
                                <a href="#" class="social-icon social-linkedin" title="Linkedin" target="_blank"><i class="icon-linkedin"></i></a>
                            </div><!-- End .soial-icons -->
                        </div><!-- End .sticky-content -->
                    </div><!-- End .col-lg-1 -->
                </div><!-- End .row -->


            </article><!-- End .entry -->

            <nav class="pager-nav" aria-label="Page navigation">
                <a class="pager-link pager-link-prev" href="@((Model.Post.Id)-1)" aria-label="Предыдущий" tabindex="-1">
                    Предыдущий пост
                </a>

                <a class="pager-link pager-link-next" href="@((Model.Post.Id)+1)" aria-label="Следующий" tabindex="-1">
                    Следующий пост
                </a>
            </nav><!-- End .pager-nav -->


        </div><!-- End .container -->
    </div><!-- End .page-content -->
    <button id="scroll-top" title="Back to Top"><i class="icon-arrow-up"></i></button>
</main><!-- End .main -->

<script>
     window.onload = function () {

        var post
        post = JSON.stringify(@Json.Serialize(Model.Post));
        console.log(post);
        document.getElementById('getPost').value = post;

        }
</script>

@section scripts{ 

    <script src="/js/jquery.sticky-kit.min.js"></script>
    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
    <script src="/js/user/specPost.js"></script>

}